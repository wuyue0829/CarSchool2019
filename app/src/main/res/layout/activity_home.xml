<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/pic_top">

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_mine"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_admin"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请选择试题项目"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/im_lianxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/pic_zxlx"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:id="@+id/im_moni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginTop="1dp"
        android:src="@mipmap/pic_mnks"/>


    <ImageView
        android:id="@+id/im_tiku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginTop="1dp"
        android:src="@mipmap/pic_grtk"/>


</LinearLayout>