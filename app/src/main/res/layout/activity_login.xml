<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/icon_login_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pic_logo"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/ly_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/icon_login_top">

        <ImageView
            android:id="@+id/icon_login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_phone" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/actv_phone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:hint="@string/login_phone"
                android:inputType="number"
                android:textSize="16sp"
                android:maxLength="11"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_line"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_below="@+id/ly_phone"/>


    <LinearLayout
        android:id="@+id/ly_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/ly_phone">

        <ImageView
            android:id="@+id/icon_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_loc" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/actv_password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:hint="@string/login_password"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_line"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_below="@+id/ly_password"/>


    <LinearLayout
        android:id="@+id/ly_button"
        android:layout_below="@+id/ly_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        
        <Button
            android:id="@+id/btn_regist"
            android:layout_width="355px"
            android:layout_height="95px"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#2f83fb"
            android:textSize="16sp"
            android:text="@string/login_regist"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="355px"
            android:layout_height="95px"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:text="@string/login_loginstr"
            android:textColor="@color/white"
            android:background="#d95253"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_forget_password"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:textColor="#7a7a7a"
        android:textSize="12sp"
        android:layout_below="@+id/ly_button"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/pic_bottom"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>