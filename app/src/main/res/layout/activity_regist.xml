<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/pic_top">
        
        
        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ly_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/icon_login_top">

        <ImageView
            android:id="@+id/icon_login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_phone" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/actv_phone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:hint="@string/login_phone"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="16sp"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_line"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_below="@+id/ly_phone"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/icon_login_top">

        <ImageView
            android:id="@+id/im_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_msg" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="120dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/im_msg"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/actv_yzm"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textSize="16sp"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>
        
        <TextView
            android:id="@+id/btn_message"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_re_button"
            android:text="获取验证码"
            android:textSize="12sp"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_line"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_below="@+id/ly_phone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/icon_login_top">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_loc" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/actv_password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:hint="@string/login_password"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_line"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_below="@+id/ly_phone"/>


    <Button
        android:id="@+id/btn_regist"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="75px"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/pic_next"/>

</LinearLayout>