<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/pic_mine">

        <ImageView
            android:id="@+id/im_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_vip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="您将订购安妍教考Vip试题"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择付款方式"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black_000000"
            android:layout_marginTop="25dp"
            android:textSize="14sp"/>



        <LinearLayout
            android:layout_below="@+id/tv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_wx"
                android:layout_width="match_parent"
                android:layout_height="45dp">


                <ImageView
                    android:id="@+id/im_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_wx"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:layout_toEndOf="@+id/im_weixin"
                    android:text="微信支付" />


                <ImageView
                    android:id="@+id/im_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_checkd"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"/>


            </RelativeLayout>
            
            
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="0.5dp"
                android:background="#cecece">

            </View>


            <RelativeLayout
                android:id="@+id/rl_zfb"
                android:layout_width="match_parent"
                android:layout_height="45dp">


                <ImageView
                    android:id="@+id/im_zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_zfb"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:layout_toEndOf="@+id/im_zhifubao"
                    android:text="支付宝支付" />


                <ImageView
                    android:id="@+id/im_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_ido"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"/>


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="0.5dp"
                android:background="#cecece">

            </View>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_pay"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:background="@drawable/login_re_button"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/im_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_bottom"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>



</LinearLayout>